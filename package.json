{
  "name": "@sales-point/server",
  "version": "1.0.0",
  "description": "The server of the Sales Point app",
  "main": "src/main/server.ts",
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "engines": {
    "node": "12.14.1"
  },
  "scripts": {
    "audit": "audit-ci --config audit-ci.json",
    "build": "rimraf dist && npx tsc -p tsconfig-build.json",
    "dev": "cross-env NODE_ENV=development npx ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "start": "cross-env NODE_ENV=production node start dist/main/server.js",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:ci": "yarn test --forceExit --detectOpenHandles --coverage",
    "test:dev": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "keywords": [],
  "author": "Daniel Gon√ßalves Gonzaga",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "audit-ci": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-mock-extended": "^1.0.9",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.62",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.3.0",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.1"
  }
}
